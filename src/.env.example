APP_NAME="mini-rag"
APP_VERSION="1.0.0"
APP_ENV="development"
FILE_ALLOWED_EXTENSIONS=["txt", "pdf", "docx", "md"]
FILE_MAX_SIZE_MB=50
FILE_CHUNK_SIZE=1048576  # 1 MB

################LLM CONFIGURATION################
GENERATION_BACKEND = "OPENAI"
EMBEDDING_BACKEND = "COHERE"

OPENAI_API_KEY="your_openai_api_key"
