GENERATION_MODEL="gpt-4"
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_SIZE=1536

GENERATION_DEFAULT_MAX_TOKENS=150
GENERATION_DEFAULT_TEMPERATURE=0.7

################Vector DB CONFIGURATION################
VECTOR_DB_BACKEND="QDRANT"
